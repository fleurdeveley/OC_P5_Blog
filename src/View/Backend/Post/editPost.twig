{% extends 'layout.twig' %}

{% block content %}

    <section id="editpost">
        <div class="row m-3 p-1">
            <div class="col-12 text-center">
                <h4 class="text-perso2 color-perso2">Modifier l'article "{{ post.title }}"</h4>
            </div>
        </div>

        <form action="/editpost/{{ post.id }}" method="post">

            {{ form|raw }}

            <button type="submit" class="btn btn-outline-warning offset-md-10 col-md-2 col-xs-12 mb-3 p-2">
                Modifier</button>
        </form>
    </section>

{% endblock %}