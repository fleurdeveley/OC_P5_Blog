{% extends 'layout.twig' %}

{% block content %}
<section id="home">
    <div class="row m-4">
        <div class="col-12 text-center">
            <img id="photo" class="img-responsive" src="/img/logo.png" alt="logo">
            <p>Cette reconversion professionnelle est un vrai défi : apprendre et se remettre en question.</p>
        </div>
    </div>

    <div class="row m-4 pt-3">
        <div class="col-xs-12 col-lg-4">
            <div class="card">
                <h4 class="card-header bg-perso3 text-center color-perso2">GitHub</h4>
                <div class="card-body text-center">
                    <p>
                        <a href="https://github.com/fleurdeveley/" target="_blank"> <i class="fab fa-github-square fa-2x"></i></a>
                        Outil pour le stockage de mes dev.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-lg-4">
            <div class="card">
                <h4 class="card-header bg-perso3 text-center color-perso2">Linkedin</h4>
                <div class="card-body">
                    <p>
                        <a href="https://www.linkedin.com/in/fleur-develey-8b4b4718a" target="_blank"> <i class="fab fa-linkedin fa-2x"></i></a>
                        Mon réseau social professionnel
                    </p>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-lg-4">
            <div class="card">
                <h5 class="card-header bg-perso3 text-center color-perso2">CV</h5>
                    <div class="card-body">
                        <p>
                            <a href="/img/cv.pdf" target="_blank">CV</a>
                            N'hésitez pas à le consulter.
                        </p>
                    </div>
            </div>
        </div>
    </div>

    <div id="form" class="row m-4 pt-3">
        <div class="col-12 text-center color-perso2">
            <h2>Contactez-moi</h2>
        </div>

        <form>
            <div class="form-row m-3">
                <div class="form-group col-md-6 p-1">
                    <label for="inputName4">Nom</label>
                    <input type="text" class="form-control" id="inputName4">
                </div>

                <div class="form-group col-md-6 p-1">
                    <label for="inputName4">Prénom</label>
                    <input type="text" class="form-control" id="inputName4">
                </div>

                <div class="form-group col-12 p-1">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="inputEmail4">
                </div>

                <div class="form-group col-12 p-1">
                    <label for="exampleFormControlTextarea1">Message</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>

                <button type="submit" class="btn bg-light border offset-10 col-2 p-1">Envoyer</button>
            </div>
        </form>
    </div>
</section>
{% endblock %}