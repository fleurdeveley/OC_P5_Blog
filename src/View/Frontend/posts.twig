{% extends 'layout.twig' %}

{% block content %}

    <div class="row m-3 p-1">
        <div class="col-12 text-center">
            <h3 class="color-perso2">Retrouvez l'ensemble des articles</h3>
        </div>
    </div>

    {% for post in posts %}

    <section id="posts">
        <div class="card m-3 p-1">
            <div class="row g-0">
                <div class="col-md-2 my-auto mx-auto">
                    <img src="{{ post.picture }}" class="card-img-top" alt="Responsive image">
                </div>
                <div class="col-md-10">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text text-justify">{{ post.chapo }}</p>
                        <p class="card-text"><small class="text-muted">publi√© le {{ post.updatedAt }}</small></p>
                        <a href="/" class="btn btn-light border d-line float-right">lire la suite</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% endfor %}

{% endblock %}