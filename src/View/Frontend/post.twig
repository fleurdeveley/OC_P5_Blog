{% extends 'layout.twig' %}

{% block content %}

    <section id="post">
        <div class="card m-3 p-1">
            <div class="row g-0">
                <div class="col-md-2">
                    <img src="{{ post.picture }}" class="card-img-top" alt="Responsive image">
                </div>
                <div class="col-md-10">
                    <div class="card-body">
                        <h4 class="card-title color-perso2">{{ post.title }}</h4>
                        <div class="row mb-2">
                            <div class="col-6">
                                <p class="card-text"><small class="text-muted">modifié le {{ post.updatedAt|date('d/m/Y') }}</small></p>
                            </div>
                            <div class="col-6 text-right">
                                <span class="badge bg-perso3 color-perso2 p-2">{{ category.name|upper }}</span>
                            </div>
                        </div>
                        <p class="card-text text-justify">{{ post.content|raw|nl2br }}</p>
                        <p class="card-subtitle mb-2 text-muted">Auteur : {{ user.firstname }} {{ user.lastname }}</p>
                        <a href="/articles" class="btn bg-light border offset-9 col-3 p-1">retour à la liste des articles</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="m-3 p-2">
            <h4 class="color-perso2">Ajouter un commentaire</h4>

            <form action="" method="post">
                <div class="form-group">
                    <label for="author">Auteur</label>
                    <input type="text" id="author" name="author" class="form-control border-dark">
                </div>

                <div class="form-group">
                    <label for="comment">Commentaires</label>
                    <textarea name="comment" id="comment" name="comment" class="form-control border-secondary"></textarea>
                </div>

                <button type="submit" class="btn bg-light border offset-10 col-2 p-1">Envoyer</button>
            </form>
        </div>

        <div class="m-3 p-1">
            <h4 class="color-perso2">Commentaires</h4>

        {% for comment in comments %}

            <div class="card mb-3 p-1">
                <div class="card-body">
                    <span class="card-title color-perso1">{{ comment.author }}</span>
                    <span class="card-subtitle mb-2 text-muted "><small>le {{ comment.updatedAt }}</small></span>
                    <br />
                    <span class="card-text text-justify">{{ comment.content }}</span>
                </div>
            </div>

        {% endfor %}

        </div>
    </section>

{% endblock %}